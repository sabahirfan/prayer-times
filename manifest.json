{
    "manifest_version": 3,
    "name": "Prayer Times",
    "version": "1.0",
    "description": "Display daily prayer times based on your location",
    "permissions": ["geolocation", "storage"],
    "host_permissions": ["https://nominatim.openstreetmap.org/*"],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }